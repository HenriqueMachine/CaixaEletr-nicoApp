<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simuladordecaixa.simuladorcaixaeletronico.MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingDEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button

            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btSaque"
            android:layout_width="@dimen/largurabt"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btDeposito"
            android:layout_alignLeft="@+id/btDeposito"
            android:layout_alignStart="@+id/btDeposito"
            android:layout_marginBottom="33dp"
            android:padding="@dimen/paddingDEF"
            android:text="@string/saque" />

        <Button

            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btDeposito"
            android:layout_width="@dimen/largurabt"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/paddingDEF"
            android:text="@string/dep_sito" />


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/paddingDEF"
            android:text="@string/saldo" />

        <TextView

            android:textSize="@dimen/txOpcao"
            android:textColor="@color/colorAccent"
            android:id="@+id/txEscolha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/escolha_uma_opc_o" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
