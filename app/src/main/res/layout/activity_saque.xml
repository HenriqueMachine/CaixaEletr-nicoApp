<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simuladordecaixa.simuladorcaixaeletronico.SaqueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingDEF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:gravity="center"
            android:id="@+id/tvValorDeposito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDigiteValorSaque"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:hint="R$ 0.000,00"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="50dp" />


        <TextView
        android:id="@+id/tvDigiteValorSaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Digite o valor de saque:"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txOpcao" />


        <Button
            android:id="@+id/btNr2Saque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvValorDeposito"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:background="@color/colorAccent"
            android:text="2"
            android:textSize="@dimen/txtSizeBt"
            android:onClick="capturaBotoesSaque"
            />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr3Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btNr2Saque"
        android:text="3"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr1Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btNr2Saque"
        android:text="1"
        android:onClick="capturaBotoesSaque"/>


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr4Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btNr1Saque"
        android:layout_marginTop="@dimen/paddingDEF"
        android:text="4"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr5Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btNr4Saque"
        android:layout_alignBottom="@+id/btNr4Saque"
        android:layout_alignLeft="@+id/btNr2Saque"
        android:layout_alignStart="@+id/btNr2Saque"
        android:text="5"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr6Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btNr5Saque"
        android:layout_alignBottom="@+id/btNr5Saque"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="6"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr7Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btNr4Saque"
        android:layout_marginTop="@dimen/paddingDEF"
        android:text="7"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr8Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btNr7Saque"
        android:layout_alignBottom="@+id/btNr7Saque"
        android:layout_alignLeft="@+id/btNr5Saque"
        android:layout_alignStart="@+id/btNr5Saque"
        android:text="8"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr9Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btNr8Saque"
        android:layout_alignBottom="@+id/btNr8Saque"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="9"
        android:onClick="capturaBotoesSaque"
        />


    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btNr0Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btNr8Saque"
        android:layout_alignRight="@+id/btNr8Saque"
        android:layout_below="@+id/btNr8Saque"
        android:layout_marginTop="@dimen/paddingDEF"
        android:text="0"
        android:onClick="capturaBotoesSaque"
        />

    <Button
        android:textSize="@dimen/txtSizeBt"
        android:background="@color/colorAccent"
        android:id="@+id/btConfirmarSaque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="CONFIRMAR"
        android:onClick="depositoCaseSaque"
        />
   </RelativeLayout>

</android.support.constraint.ConstraintLayout>
