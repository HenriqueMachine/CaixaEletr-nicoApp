<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simuladordecaixa.simuladorcaixaeletronico.DepositoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingDEF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:gravity="center"
            android:id="@+id/tvValorDeposito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDigiteValorSaque"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:hint="R$ 0.000,00"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="50dp" />


        <TextView
            android:id="@+id/tvDigiteValorSaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Digite o valor de depÃ³sito:"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txOpcao"
            />


        <Button
            android:id="@+id/btNr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvValorDeposito"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@color/colorAccent"
            android:onClick="capturaBotoes"
            android:text="2"
            android:textSize="@dimen/txtSizeBt" />


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btNr2"
            android:text="3"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btNr2"
            android:text="1"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btNr1"
            android:layout_marginTop="@dimen/paddingDEF"
            android:text="4"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btNr4"
            android:layout_alignBottom="@+id/btNr4"
            android:layout_alignLeft="@+id/btNr2"
            android:layout_alignStart="@+id/btNr2"
            android:text="5"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btNr5"
            android:layout_alignBottom="@+id/btNr5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="6"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btNr4"
            android:layout_marginTop="@dimen/paddingDEF"
            android:text="7"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btNr7"
            android:layout_alignBottom="@+id/btNr7"
            android:layout_alignLeft="@+id/btNr5"
            android:layout_alignStart="@+id/btNr5"
            android:text="8"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btNr8"
            android:layout_alignBottom="@+id/btNr8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="9"
            android:onClick="capturaBotoes"/>


        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/btNr0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btNr8"
            android:layout_alignRight="@+id/btNr8"
            android:layout_below="@+id/btNr8"
            android:layout_marginTop="@dimen/paddingDEF"
            android:text="0"
            android:onClick="capturaBotoes"/>

        <Button
            android:textSize="@dimen/txtSizeBt"
            android:background="@color/colorAccent"
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="CONFIRMAR"
            android:onClick="depositoCase"/>




    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
